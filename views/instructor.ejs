  </nav>
  <div class="container">
    <br>
    <div class="text-center">
      <h2>Instructor Details</h2>
    </div>
    <br>
    <% if (instructor) { %>
      <div>
        <p><img src="/images/<%= instructor.image %>" width="100" height="100"></p>
        <p><b>Instructor Name:</b><br>
          <%= instructor.instructorName %>
        </p>
        <p><b>Instructor Mastery:</b><br>
          <%= instructor.mastery %>
        </p>
        <p><b>Instructor Qualification:</b><br>
          <%= instructor.qualification %>
        </p>
        <p><b>Price:</b><br>
          <%= instructor.price %>/hr
        </p>
      </div>
      <% } else { %>
        <p>No instructor found.</p>
        <% } %>
          <a href="/instructor">Back</a>
  </div>
