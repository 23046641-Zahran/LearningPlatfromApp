  <title>My Learning Platform</title>
</head>

<body>
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">My Learning Platform</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/instructor">Instructor</a>
          </li>
        </ul>
      </div>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/course">Courses</a>
          </li>
        </ul>
      </div>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/bookings">Booking</a>
          </li>
        </ul>
      </div>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/displayBooking">Manage Booking</a>
          </li>
        </ul>
      </div>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/login">Login</a>
          </li>
        </ul>
      </div>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/signup">Sign Up</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>
  <div class="container">
    <br>
    <div class="row">
      <div class="col-md-12 text-center">
        <h2>Our Courses</h2>
      </div>
    </div>
    <br>

    <div class="row">
      <% for (let i=0; i < courses.length; i++) { %>
        <div class="col-md-4">
          <div class="card mb-3">
            <div class="card-body" style="height: 250px; overflow-y: auto;">
              <p class="card-text"><b>Course:</b>
                <%= courses[i].courseName %>
              </p>
              <p class="card-text"><b>Description:</b>
                <%= courses[i].description %>
                  <br><br>
                  <a href="/purchase">Buy and download package</a>
              </p>
            </div>
          </div>
        </div>
        <% } %>
    </div>
  </div>
  </div>
</body>
